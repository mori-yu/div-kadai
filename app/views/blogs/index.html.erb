<p id="notice"><%= notice %></p>

<h1>Listing Blogs</h1>

  <% @blogs.each do |blog| %>

    <div class="row">
      <div class="col col-sm-8 col-xs-offset-1 col-xs-10">
        <h4> <%= blog.title %> </h4>
        <p><%= blog.content %></p>

        <%= link_to "編集", edit_blog_path(blog.id), class: "btn btn-default btn-sm" %>
        <%= link_to "削除", blog_path(blog.id), method: :delete, data: { confirm: "本当に削除しますか？"}, class: "btn btn-default btn-sm" %>
        <br>

      </div>
    </div>

  <% end %>

  <br>
  <%= link_to "New Blog", new_blog_path %>

